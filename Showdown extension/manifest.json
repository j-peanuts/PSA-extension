{
  "manifest_version": 3,
  "name": "PSA Showdown Extension",
  "version": "1.0",
  "description": "A Pokemon Showdown extension for PSA analysis",
  "permissions": [
    "activeTab",
    "storage",
    "tts"
  ],
  "host_permissions": [
    "https://play.pokemonshowdown.com/*",
    "https://api.speechify.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://play.pokemonshowdown.com/*"],
      "js": [
        "scripts/speechify-api.js",
        "scripts/battle-state.js",
        "scripts/key-handler.js",
        "scripts/ui-handler.js",
        "scripts/content.js"
      ],
      "css": ["styles/styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

